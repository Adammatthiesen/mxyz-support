---
import { getCollection, getEntry } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/ui/container.astro";
import SupportOurWork from "@components/crumbs/SupportOurWork.astro";
import BackToBlog from "@components/crumbs/BackToBlog.astro";


// Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({ params: { slug: entry.slug }, props: { entry }, }));
}
// Get the entry directly from the prop on render
const { entry } = Astro.props;
const { Content } = await entry.render();
const { data: authorData } = await getEntry("team", entry.data.author.id);

---
<Layout title={entry.data.title}>
  <Container>
    <div class="mx-auto max-w-5xl mt-14">
      <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 uppercase tracking-wider">
        {entry.data.category}
      </span>
      <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-1 lg:leading-tight"> 
        {entry.data.title}
      </h1>
      <div class="flex gap-2 mt-3 items-center flex-wrap md:flex-nowrap">
        <a href={authorData.profileurl} class="inline-flex pr-2 mb-2  focus:outline-none rounded-full border focus:z-10 focus:ring-4  focus:ring-gray-700 bg-slate-800 text-slate-300 border-gray-600 hover:bg-slate-600">
          <img class="w-7 h-7 me-1 rounded-full" src={authorData.avatar} alt= {authorData.name}>
          <span class="text-gray-400"> {authorData.name}</span>
        </a>
        <span class="text-gray-400">•</span>
        <time class="text-gray-400" datetime={entry.data.publishDate.toISOString()}>
          {entry.data.publishDate.toDateString()}
        </time>
        <span class="text-gray-400 hidden md:block">•</span>
        <div class="w-full md:w-auto flex flex-wrap gap-3">
          { entry.data.tags.map((tag) => (
              <span class="bg-gray-100 text-gray-800 text-xs font-medium me-0.5  rounded dark:bg-gray-700 dark:text-gray-400 border border-gray-500 p-0.5"
              > #{tag} </span> ))
          }
        </div>
      </div>
    <SupportOurWork />
    </div>
    <div class="mx-auto prose prose-lg mt-6 max-w-5xl">
      <Content />
    </div>
    
    <BackToBlog />
  </Container>
</Layout>
