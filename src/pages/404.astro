---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="404 Not Found">
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
      <div class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-gray-900 rounded-lg group bg-gradient-to-br from-red-200 via-red-300 to-yellow-200  dark:text-white  focus:ring-4 focus:outline-none focus:ring-red-100 dark:focus:ring-red-400 mt-10">
        <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md">
          <div class="mt-5 text-center">
            <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
              <i class="bi bi-bug"></i> 404
            </h1>
            <p class="text-lg mt-4 text-slate-300">Page not found.</p>
            <p class="text-base text-slate-300">The page may have moved, or has been deleted!</p>
          </div>
          <Link
            href="/"
            target=""
            class="flex gap-1 items-center justify-center bg-slate-800 mt-5 mb-5"
            rel="noopener">
            <i class="w-5 h-5 bi bi-arrow-left"></i>
            Back to Home page
            </Link>
        </span>
      </div>
    </div>
  </Container>
</Layout>
