---
import Container from "@components/ui/container.astro";
import StoreLayout from "@layouts/StoreLayout.astro";
import ShoppingCart from "@components/store/ShoppingCart.astro";
import StoreProductList from "@components/store/StoreProductList.astro";

const checkDevENV = import.meta.env.DEV
---

<StoreLayout title="Store">
  <Container>
    
    <ShoppingCart />

    <center>
      <div class="mt-16 md:mt-5 ">
        <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Products & Services</h2>
      </div>
    </center>

    {checkDevENV === true ? <StoreProductList /> : <center><p class="text-lg mt-4 text-slate-300">There are no products at the moment... Check back later for updates!</p></center> }
    
  </Container>
</Layout>
