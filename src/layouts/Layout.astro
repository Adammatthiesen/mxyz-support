---
import { SEO } from "astro-seo";
import Footer from "@components/crumbs/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import "bootstrap-icons/font/bootstrap-icons.css";
import { ViewTransitions } from "astro:transitions";

export interface Props {
  title: string;
}

// THIS SETTING MUST MATCH THEMES AVAILABLE FROM 'tailwind.config.cjs'
// module.exports = { / .... / daisyui: { themes: ["synthwave"], }
// if themes: true, then you can select ANY DaisyUI Theme.
const DaisyUiThemeSelection = "synthwave"

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Matthiesen IT Services & Support"
  : "Matthiesen IT Services & Support";
---

<!DOCTYPE html>
<html lang="en" data-theme={DaisyUiThemeSelection}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={makeTitle}
      description="IT Support and Services provided remotely from and local to the Seattle, Washington area"
      canonical={canonicalURL}
    />
    <ViewTransitions />
  </head>
  <body>
    <Navbar />
    <div class="divider py-0 my-0" />
    <slot />
    <div class="divider py-0 mb-0 mt-5" />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
